# docs: https://www.systutorials.com/docs/linux/man/5-terminator_config

[global_config]
enabled_plugins = LaunchpadCodeURLHandler, APTURLHandler, LaunchpadBugURLHandler

[keybindings]
copy = <Primary>c
paste = <Primary>v
new_tab = <Primary>t

[profiles]
[[default]]
    use_system_font = False
    background_darkness = 1.0 # 0.0 to 1.0
    background_type = transparent
    background_image = None
    foreground_color = "#00ff00"
    font = Monospace 13
    # If True, the value of `custom_command` will be used instead of the default shell.
    use_custom_command = True
    custom_command = zsh
    # Number of scrollback lines to keep around. You can scroll back in the terminal by this number of lines. default is 500
    scrollback_lines = 2000
[[{{ USER }}]]
    use_system_font = False
    background_darkness = 0.8
    background_type = transparent
    background_image = None
    foreground_color = "#00ff00"
    font = Monospace 14

[layouts]
  [[default]]
    [[[window0]]]
      type = Window
      parent = ""
    [[[child1]]]
      profile = New Profile
      type = Terminal
      parent = window0


[plugins]
